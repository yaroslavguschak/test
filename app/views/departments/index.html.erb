<h1>All departments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

  <hr>

  <% @department.each do |department| %>
    <tr>
      <td><%= department.department_name %></td>
      <td><%= department.description %></td>
      <td><%= link_to 'Show', department_path(department) %></td>
      <td><%= link_to 'Edit', edit_department_path(department)%></td>
      <td><%= link_to 'Destroy', department_path(department),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<hr>

<%= link_to 'New department', new_department_path %>
